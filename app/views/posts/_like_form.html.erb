<div id='likes_form<%=post.id%>'>
  <%= link_to "#{pluralize(post.likes.size,'like')}", post_likes_path(post) %></br>
  <% if post.likes.where(likeable_id: post.id, user_id: current_user.id).present? %>
    <%= render partial: 'posts/unlike',locals: {post: post} %>
  <% else %>
    <%= render partial: 'posts/like',locals: {post: post} %>
  <% end %>
</div>
